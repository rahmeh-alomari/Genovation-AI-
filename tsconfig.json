{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "module": "es2020",
    "target": "es2022",
    "strict": true,
    "module": "nodenext",

    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@services/*": ["app/services/*"],
      "@models/*": ["app/models/*"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
